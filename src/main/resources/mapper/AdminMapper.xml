<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.koreait.alsamo.admin.AdminMapper">
    <insert id="insTag">
        INSERT INTO t_board_tags
        (tname)
        VALUES
        (#{tname})
    </insert>
    <select id="selTags" resultType="List">
        SELECT * FROM t_board_tags
    </select>
    <select id="selAdmin" resultType="UserEntity">
        SELECT uid, upw
        FROM t_user
        WHERE authno = (1 OR 2)
    </select>

    <select id="selBoardList" resultType="BoardDomain">
        SELECT A.bno, A.uno, A.bcd, A.btitle, A.bctnt, A.bidx, A.bord
        , A.bdept, A.brdt, A.bhit
        , B.unm as writer
        FROM t_board as A
        LEFT JOIN t_user as B
        ON A.uno = B.uno
        where A.bcd = #{bcd}
        <if test="delChk == 0">AND A.bdel = 0</if>
        <if test="bcd > 1">AND A.bcd = #{bcd}</if>
        <if test="searchText != null">
            <foreach collection=""></foreach>
        </if>
        ORDER BY A.bidx desc, A.bord asc
        LIMIT #{startIdx}, #{cntPerPage}
    </select>
    <select id="selBoardCount" resultType="Integer">
        select count(*)
        FROM t_board
        WHERE bcd = #{bcd}
        <if test="delChk == 0">AND bdel = 0</if>
        <if test="searchText != null">
            <foreach collection=""></foreach>
        </if>
    </select>
    <delete id="delTag">
        DELETE FROM t_board_tags
        WHERE tname = #{tname}
    </delete>
</mapper>